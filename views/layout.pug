doctype html
html
  head
    title Web3 | #{title}
    link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet' href='/css/style.css')
  body
    nav.navbar.navbar-inverse
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Web3
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href='/') Home
            li
              a(href='/account') New Account
            li
              a(href='/balances') Balances
            li.dropdown
              a.dropdown-toggle(href='#',data-toggle='dropdown',role='button',aria-haspopup='true',aria-expanded='false') Contracts
                span.caret
              ul.dropdown-menu
                li
                  a(href='/contracts/compile') Compile
                li
                  a(href='/contracts/deploy') Deploy
            li.dropdown
              a.dropdown-toggle(href='#',data-toggle='dropdown',role='button',aria-haspopup='true',aria-expanded='false') Mining
                span.caret
              ul.dropdown-menu
                li
                  a(href='/mining') Start mining
                li
                  a(href='/mining/stop') Stop mining
          ul.nav.navbar-nav.navbar-right
              li
                a(href='/wallet/test') Test
    .container
      block content
      br
      hr
      footer
        p.pull-left Copyright &copy; 2018 #[a(href='https://web.facebook.com/groups/1864989040473639',taregt='_blank') #BlockChainBootCamp]
    script(src='/bower_components/jquery/dist/jquery.js')  
    script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
    script(src='/js/main.js')  
